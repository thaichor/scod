%footer.container
  = form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal col-md-5' } do |f|
    %legend Sign In

    .form-group
      = f.label :email, class: 'col-sm-4 control-label'
      .col-sm-8
        = f.text_field :email, placeholder: 'Username', autofocus: true, class: 'form-control'

    .form-group
      = f.label :password, class: 'col-sm-4 control-label'
      .col-sm-8
        = f.password_field :password, placeholder: 'Password', autocomplete: :off, class: 'form-control'

    .form-group
      .col-sm-offset-4.col-sm-8
        .checkbox
          %label
            = f.check_box :remember_me
            Remember me

    .form-group
      .col-sm-offset-4.col-sm-8
        = f.submit 'Sign In', class: 'btn btn-primary'

    = render "devise/shared/links"